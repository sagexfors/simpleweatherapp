<div class="container d-flex align-items-center justify-content-center vh-100">
  <div class="row">
    <div class="col-md-4 mb-4">
      <%= turbo_frame_tag "location" do %>
        <div class="card border-primary">
          <div class="card-header bg-primary text-white">
            Weather Report
          </div>
          <div class="card-body">
            <h2 class="card-title"><%= @current_weather.location.name.capitalize %>, <%= @current_weather.location.country.capitalize %></h2>
            <p class="card-text fs-5">Temperature: <%= @current_weather.temperature %>°C</p>
            <p class="card-text fs-5">Wind Speed: <%= @current_weather.windspeed %> m/s</p>
            <p class="card-text fs-5">Wind Direction: <%= @current_weather.winddirection %>°</p>
            <p class="card-text fs-5">Weather: <%= weather_description(@current_weather.weathercode) %></p>
            <p class="card-text fs-5">Datetime: <%= @current_weather.time.localtime.strftime('%A, %B %e, %Y %l:%M %p') %></p>
            <p><%= link_to "Hourly Forecast", @current_weather.location.hourly_forecast, data: { turbo_frame: "_top" } %></p>
            <p><%= link_to "Daily Forecast", @current_weather.location.daily_forecast, data: { turbo_frame: "_top" } %></p>
            <%= render "shared/search" %>
          </div>
        </div>
      <% end %>
